@model JobHunting.Models.JobsModel
@{
    ViewBag.Title = "JobDetail";
    Layout = "~/Views/Shared/_LayoutJobSeeker.cshtml";
}





<style>
    .card {
        padding: 0px;
        font-size: 14px;
        box-shadow: 12px 12px 22px grey;
    }

    .card-header {
        background-color: lightblue;
        box-shadow: 2px 2px 12px grey;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    }

    .card-body {
        overflow: auto;
        height: 500px;
    }

    table {
        border: 0px;
    }

    .btn-apply {
        width: 150px;
        padding: 20px;
        border-radius: 10px;
        font-size: 14px;
    }
</style>
<div class="container">
    <div class="card col-lg-8 offset-lg-2" style="margin-top:80px;">
        <div class="card-header">
            <h1>@Model.Title</h1>

            <h4><i class="fa fa-briefcase" aria-hidden="true"></i> @Model.CompanyName</h4>

        </div>
        <div class="card-body">
            <table class="table col-lg-6">
                <tr>
                    <th class="col-lg-4">City</th>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>@Model.Category</td>
                </tr>
                <tr>
                    <th>Position</th>
                    <td>@Model.Postion</td>
                </tr>
                <tr>
                    <th>Job Type</th>
                    <td>@Model.Type</td>
                </tr>
                <tr>
                    <th>Age Required</th>
                    <td>@Model.RequiredAge</td>
                </tr>
                <tr>
                    <th>Gender</th>
                    <td>@Model.Gender</td>
                </tr>
            </table>
            <h2>Description</h2>
            <p>@Model.ShortDescription</p>
            <h2>Requirements For this Job</h2>
            <p>@Model.Requirements</p>
            <div class="offset-lg-4">
                <a href="/JobSeeker/JobApply/@Model.Id" class="btn-apply btn btn-lg btn-outline-primary">Apply</a>
            </div>
        </div>

        <div class="card-footer">

        </div>
    </div>
</div>

