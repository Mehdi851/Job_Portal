<style>
    body {
        font-size: 14px;
    }

    .btn-white {
        border: 2px solid #ffffff;
        border-radius: 1rem;
        color: #ffffff;
        font-weight: 600;
        font-size: 1rem;
        padding-left: 2rem;
        padding-right: 2rem;
    }

        .btn-white:hover {
            background-color: white;
            color: black;
            border: 1px solid;
        }

    .btn1 {
        color: white;
    }

    .job {
        padding: 20px;
        border-left: 3px solid gray;
    }

        .job:hover {
            background-color: lavender;
            border-left: 3px solid blue;
        }

    .job-header {
        background-color: white;
        border: 0px;
        padding: 20px;
    }

    .job-body {
        background-color: white;
        border: 0px;
        color: gray;
        padding: 20px;
    }

    .job-footer {
        border: 0px;
        background-color: white;
        color: gray;
        padding: 20px;
    }

    .category {
        color: black;
        border-left: 3px solid gray;
        padding: 5px;
    }

        .category:hover {
            background-color: lavender;
            margin: 2px;
            border: 2px solid black;
            border-left: 3px solid blue;
        }

    .bg-cover {
        background-size: cover !important;
        background: #2b5876;
        background: -webkit-linear-gradient(to right, #4e4376, #2b5876);
        background: linear-gradient(to right, #4e4376, #2b5876);
    }
