@using JobHunting.Models;

@model dynamic
@{
    ViewBag.Title = "Home Page";
    IEnumerable<JobsModel> jobs = Model.Jobs;
    IEnumerable<JobsModel> newjobs = Model.NewJobs;
    IEnumerable<JobCategoryModel> Categories = Model.Categories;
    List<string> citites = new List<string>() { "Islamabad", "Rawalpindi", "Lahore", "Karachi", "Peshawar", "Multan", "Queta" };
}
<style>
    body {
        font-size: 14px;
    }

    .btn-white {
        border: 2px solid #ffffff;
        border-radius: 1rem;
        color: #ffffff;
        font-weight: 600;
        font-size: 1rem;
        padding-left: 2rem;
        padding-right: 2rem;
    }

        .btn-white:hover {
            background-color: white;
            color: black;
            border: 1px solid;
        }

    .btn1 {
        color: white;
    }

    .job {
        padding: 20px;
        border-left: 3px solid gray;
    }

        .job:hover {
            background-color: lavender;
            border-left: 3px solid blue;
        }

    .job-header {
        background-color: white;
        border: 0px;
        padding: 20px;
    }

    .job-body {
        background-color: white;
        border: 0px;
        color: gray;
        padding: 20px;
    }

    .job-footer {
        border: 0px;
        background-color: white;
        color: gray;
        padding: 20px;
    }

    .category {
        color: black;
        border-left: 3px solid gray;
        padding: 5px;
    }

        .category:hover {
            background-color: lavender;
            margin: 2px;
            border: 2px solid black;
            border-left: 3px solid blue;
        }

    .bg-cover {
        background-size: cover !important;
        background: #2b5876;
        background: -webkit-linear-gradient(to right, #4e4376, #2b5876);
        background: linear-gradient(to right, #4e4376, #2b5876);
    }
</style>

<!-- slider Area Start-->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="slider-active">
        @*<img src="~/Images/img/hero/h1_hero.jpg" />*@
        <div class="single-slider slider-height d-flex align-items-center" style="background-image: url('../Images/img/hero/h1_hero.jpg')!important;" >
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-9 col-md-10">
                        <div class="hero__caption">
                            <h1>Find the most exciting startup jobs</h1>
                        </div>
                    </div>
                </div>
                <!-- Search Box -->
                <div class="row">
                    <div class="col-xl-8">
                        <!-- form -->
                        <form action="/Home/JobSearch" method="post" class="search-box">
                            <div class="input-form">
                                <input type="text" name="Title" placeholder="Job Tittle or keyword">
                            </div>
                            <div class="select-form">

                                @Html.DropDownList("City", new SelectList(citites), htmlAttributes: new { @class = "", @id = "city", @placeholder = "Job Title" })


                            </div>
                            <div class="search-form">

                                <button type="submit" style="color: #fff;  background-color: #fb246a; width: 100%;height:70px;" class="button">Find Job</button>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!-- Our Services Start -->
<div class="our-services section-pad-t30">
    <div class="container">
        <!-- Section Tittle -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center">
                    <span>FEATURED TOURS Packages</span>
                    <h2>Browse Top Categories </h2>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-contnet-center">

            @foreach (JobCategoryModel category in Categories)
            {
                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                    <div class="single-services text-center mb-30">
                        <div class="services-ion">
                            <span class="flaticon-tour"></span>
                        </div>
                        <div class="services-cap">
                            <h5><a href="/Home/Categories/@category.Id">@category.Title</a></h5>
                            <span>(653)</span>
                        </div>
                    </div>
                </div>
                @*<a href="/Home/Categories/@category.Id"><div class="category">@category.Title</div></a>*@


            }
           
        </div>
        <!-- More Btn -->
        <!-- Section Button -->
        <div class="row">
            <div class="col-lg-12">
                <div class="browse-btn2 text-center mt-50">
                    <a href="job_listing.html" class="border-btn2">Browse All Sectors</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Our Services End -->
<!-- Online CV Area Start -->
<div class="online-cv cv-bg section-overly pt-90 pb-120" style="background-image: url('../Images/img/gallery/cv_bg.jpg')!important;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="cv-caption text-center">
                    <p class="pera1">FEATURED TOURS Packages</p>
                    <p class="pera2"> Make a Difference with Your Online Resume!</p>
                    <a href="#" class="border-btn2 border-btn4">Upload your cv</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Online CV Area End-->
<!-- Featured_job_start -->
<section class="featured-job-area feature-padding">
    <div class="container">
        <!-- Section Tittle -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center">
                    <span>Recent Job</span>
                    <h2>Featured Jobs</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-10">

                @if (jobs != null)
                {
                    foreach (JobsModel job in jobs)
                    {
                        <!-- single-job-content -->
                        <div class="single-job-items mb-30">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href="job_details.html"><img src="assets/img/icon/job-list1.png" alt=""></a>
                                </div>
                                <div class="job-tittle">
                                    <a href="job_details.html"><h4>@job.Title</h4></a>
                                    <ul>
                                        <li>Creative Agency</li>
                                        <li><i class="fas fa-map-marker-alt"></i>@job.CompanyName</li>
                                        <li> @job.Salary</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items-link f-right">
                                <a href="job_details.html">Full Time</a>
                                <span> @job.TimeofPost.ToString("yyyy-MM-dd")</span>
                            </div>
                        </div>

                    }
                }

              
            </div>
        </div>
    </div>
</section>
<!-- Featured_job_end -->
