
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>Register</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background: rgb(219,226,226);
        }

        .row {
            background: white;
            border-radius: 30px;
            box-shadow: 12px 12px 22px grey;
            height: 800px;
        }

        img {
            border-top-left-radius: 50px;
            border-bottom-left-radius: 50px;
            height:100%;
            margin:0;
            margin-left:-20px;
        }

        .btn1 {
            border: none;
            outline: none;
            height: 70px;
            width: 100%;
            background-color: black;
            color: white;
            border-radius: 4px;
            font-weight: bold;
        }

            .btn1:hover {
                background-color: white;
                color: black;
                border: 1px solid;
            }
    </style>
</head>
<body>

    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">

                <img src="~/Images/Employer/A.jpg" class="img-fluid col-lg-5" alt="Login Image" />

                <div class="col-lg-7 px-5 pt-5">

                    <h4>Create Your Account</h4>
                    <form action="/Employeer/Register" method="post" onsubmit="return validateform()">
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" class="form-control my-3 p-4" name="Username" id="Username" placeholder="Username" />
                            </div>
                        </div>
                        <span id="InvalidUsername" class="text-danger"></span>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="text" class="form-control my-3 p-4" name="CompanyName" id="company" placeholder="Company Name" />
                            </div>
                        </div>  <span id="Invalidcompany" class="text-danger"></span>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="email" class="form-control my-3 p-4" name="Email" id="email" placeholder="Email Address" />
                            </div>
                        </div>  <span id="Invalidemail" class="text-danger"></span>

                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="password" class="form-control my-3 p-4" name="Password" id="pass" placeholder="Enter Password" />
                            </div>
                        </div>  <span id="Invalidpass" class="text-danger"></span>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="password" class="form-control my-3 p-4" id="retryPass" placeholder="Re-enter Password" />
                            </div>
                        </div>  <span id="InvalidretryPass" class="text-danger"></span>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" class="btn1 my-3 p-4 mt-3 mb-5 ">Register</button>
                            </div>
                        </div>
                        <p>I have an account<a href="/Employeer/Login">Login</a> </p>
                    </form>
                </div>

            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>*@
<script>

    function validateform() {
        console.log("test");
        var Username = $("#Username").val();
        var email = $("#email").val();
        var pass = $("#pass").val();
        var retrypass = $("#retryPass").val();
        var company = $("#company").val
        document.getElementById("InvalidUsername").innerHTML = "";
        document.getElementById("Invalidemail").innerHTML = "";
        document.getElementById("Invalidpass").innerHTML = "";
        document.getElementById("InvalidretryPass").innerHTML = "";
        document.getElementById("Invalidcompany").innerHTML = "";



        if (Username == "" || Username == undefined) {
            document.getElementById("InvalidUsername").innerHTML = "Please Enter Your Name";
            return false;
        }
        if (email == "" || email == undefined) {
            document.getElementById("Invalidemail").innerHTML = "Please Enter Your Email";
            return false;
        }
        if (company == "" || company == undefined) {
            console.log("CompanyName");
            document.getElementById("Invalidcompany").innerHTML = "Please Enter Your Company Name";
            return false;
        }
        if (pass == "" || pass == undefined) {
            document.getElementById("Invalidpass").innerHTML = "Please Enter Your Password";
            return false;
        }
        if (retrypass == "" || retrypass == undefined) {
            document.getElementById("InvalidretryPass").innerHTML = "Please Enter Your Retry Password";
            return false;
        }
        if (pass != retrypass) {
            document.getElementById("InvalidretryPass").innerHTML = "Password and Retry Password are Not Equal!";
            return false;
        }
        else {
            console.log("valid");
            return true;
        }
        return false;
    }
</script>
</body>
</html>
