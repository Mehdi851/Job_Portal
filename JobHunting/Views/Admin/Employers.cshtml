@model IEnumerable<JobHunting.Models.EmployerModel>

@{
    ViewBag.Title = "Employers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Employers </li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="border:0px;">
                    <div class="d-flex justify-content-between">
                        <h1 class="">Employers</h1>

                    </div>
                </div>
                <div class="card-body">



                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProfilePicURL)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </th>
                            <th></th>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.ProfilePicURL != null)
                                        {
                                            <img src="@Url.Content(item.ProfilePicURL)" style="width:50px; height:50px;" class="img-circle elevation-2" alt="User Image">
                                        }
                                        else
                                        {
                                            <img src="~/images/user.png" style="width:50px; height:50px;" class="img-circle elevation-2" alt="User Image">
                                        }


                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                    </td>
                                    <td>


                                        <a class="btn btn-sm btn-danger" href="/Admin/DeleteEmployer/@item.Id" onclick="return confirm('Are you Sure want to delete this Job')">
                                            Delete

                                        </a>

                                    </td>
                                </tr>
                            }
                        }


                    </table>




                </div><!--Flex end-->
            </div>

        </div>
    </div>

</div>
