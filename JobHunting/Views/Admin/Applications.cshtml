@model IEnumerable<JobHunting.Models.ApplicationModel>
@{
    ViewBag.Title = "Applications";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int count = 1;
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="border:0px;">
                    <div class="d-flex justify-content-between">
                        <h1 class="">Applications</h1>

                    </div>
                </div>
                <div class="card-body">



                    <table class="table table-striped table-bordered" id="appTable">
                        <tr>
                            <th>
                                No#
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ApplicantName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FatherName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CNIC)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Experience)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RequiredSalary)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.LatestQualification)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CVurl)
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApplicantName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FatherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CNIC)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Experience)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequiredSalary)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.LatestQualification)
                                </td>
                                <td>

                                    <a href="@Url.Content(item.CVurl)">CV</a>
                                </td>
                                @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>*@
                            </tr>
                            count++;
                        }

                    </table>



                </div><!--Flex end-->
            </div>

        </div>
    </div>

</div>

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#appTable').DataTable();
        });
    </script>
}