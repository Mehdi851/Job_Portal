@model IEnumerable<JobHunting.Models.JobCategoryModel>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int count = 1;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
               
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">All Category </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="border:0px;">
                    <div class="d-flex justify-content-between">
                        <h1 class="">Categories</h1>
                        <span><a href="/Admin/AddCategorie" class="btn btn-primary">Add Category </a></span>

                    </div>
                </div>
                <div class="card-body">
                    

                    <table class="table" id="table">
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            
                            <th>Actions</th>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    
                                    <td>
                                        
                                       @* @Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id })*@
                                         <a class="btn btn-sm btn-danger" href="/Admin/DeleteCategory/@item.Id" onclick="return confirm('Are you Sure want to delete this Job')">
                                            Delete

                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                       

                    </table>

                </div><!--Flex end-->
            </div>

        </div>
    </div>

</div>